<div class="media">
  <div class="media-body">
    <h3>Comments</h3>
    <small>
      <% commentable.comments.each do |comment| %>
        <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
        <p><%= comment.body %></p>
      <% end %>

    </small>

  </div>
</div>
